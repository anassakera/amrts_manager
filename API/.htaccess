# منع الوصول المباشر للملفات الحساسة
<Files "*.php">
    Order Allow,Deny
    Allow from all
</Files>

# منع الوصول لملفات الإعدادات
<Files "database.php">
    Order Deny,Allow
    Deny from all
</Files>

<Files "cors.php">
    Order Deny,Allow
    Deny from all
</Files>

# منع عرض محتويات المجلدات
Options -Indexes

# تفعيل إعادة الكتابة
RewriteEngine On

# منع الوصول لملفات النظام
<Files ".htaccess">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.log">
    Order Deny,Allow
    Deny from all
</Files>

# تعيين نوع المحتوى الافتراضي
DefaultType application/json

# تعيين ترميز UTF-8
AddDefaultCharset UTF-8

# منع الوصول لملفات قاعدة البيانات
<Files "*.sql">
    Order Deny,Allow
    Deny from all
</Files>

# منع الوصول لملفات النسخ الاحتياطية
<Files "*.bak">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.backup">
    Order Deny,Allow
    Deny from all
</Files> 